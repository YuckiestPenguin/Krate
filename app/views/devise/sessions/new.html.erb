<section class="splash sign-in-cover">
    <div class="container text-center">
        <div class="row">
            <div class="col-xs-12">
                <h1 class="intro-title">Sign In</h1>
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="field">
                    <%= f.email_field :email, autofocus: true, class: "form-control input-lg", placeholder: "Email" %>
                  </div> <br>

                  <div class="field">
                    <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg", placeholder: "Password" %>
                  </div>

                  <% if devise_mapping.rememberable? -%>
                    <div class="field">
                      <%= f.check_box :remember_me %>
                      <%= f.label :remember_me %>
                    </div>
                  <% end -%>

                  <div class="actions">
                    <%= f.submit "Log in", class: "btn btn-default" %>
                  </div>
                <% end %>

                <%= render "devise/shared/links" %>

            </div>
        </div>
    </div>
</section>
