<p id="notice"><%= notice %></p>
<div class="jumbotron text-center">
    <h1>Rates</h1>
    <div class="container-fluid">
        <%= search_form_for @search do |f| %>
        <div class="row">
            <div class="col-md-3">
                <div class="field">
                    <h3>ORIGIN</h3>
                    <%= f.text_field :origin_country_country_code_or_origin_country_name_or_origin_name_or_origin_port_code_cont, placeholder: "Ex: BAL, Port of Baltimore, US", class: "input-lg form-control" %>
                </div>
            </div>
            <div class="col-md-3">
                <div class="field">
                    <h3>DESTINATION</h3>
                    <%= f.text_field :destination_country_country_code_or_destination_country_name_or_destination_name_or_destination_port_code_cont, placeholder: "Ex: PVG, Shanghai, China", class: "input-lg form-control" %>
                </div>
            </div>
            <div class="col-md-3">
                <div class="field">
                    <h3>SHIPMENT CATEGORY</h3>
                    <%= f.collection_select :shipment_category_id_eq_any, ShipmentCategory.all, :id, :name, :include_blank => false, :multiple => true, :prompt => "Select Shipment Type", :select_prompt => "Select Shipment Type", class: "form-control"%>

                </div>
            </div>
            <div class="col-md-3">
                <div class="field">
                    <h3>CARRIER</h3>
                    <%= f.text_field :carrier_name_cont, placeholder: "Ex: United Cargo, Carotrans, Seacorp", class: "input-lg form-control" %>

                </div>
            </div>
        </div>
        <br>

        <br>
        <div class="row">
            <div class="col-md-12">
                <div><%= f.submit "Search", class: "btn btn-lg btn-primary actions" %></div><hr>
                <div><%= link_to "Clear Search", request.path, class:"btn btn-lg btn-warning" %></div>
            </div>
        </div>
    </div>
    <% end %>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div id="no-more-tables">
                <table class="table table-bordered table-striped table-condensed cf">
                    <thead class="cf">
                        <tr>
                            <th>Origin</th>
                            <th>Destination</th>
                            <th>Carrier</th>
                            <th>Shipment category</th>
                            <th>Cost</th>
                            <th>Unit of measure</th>
                            <th colspan="1"></th>
                        </tr>
                    </thead>

                    <tbody class="cf">
                        <% @rates.each do |rate| %>
                        <tr>
                            <td data-title="Origin"><%= rate.origin.name %></td>
                            <td data-title="Destination"><%= rate.destination.name %></td>
                            <td data-title="Carrier"><%= rate.carrier.name %></td>
                            <td data-title="Shipment Category"><%= rate.shipment_category.name %></td>
                            <td data-title="Cost"><%= number_to_currency(rate.cost) %></td>
                            <td data-title="Unit of Measure"><%= rate.unit_of_measure.name %></td>
                            <td class="text-center"><%= link_to 'Info', rate, class: "btn btn-xs btn-info" %>
                                <%= link_to 'Edit', edit_rate_path(rate), class: "btn btn-xs btn-warning" %>
                                <%= link_to 'Destroy', rate, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
            <%= link_to 'New Rate', new_rate_path, class: "btn btn-success" %>

        </div>
    </div>
</div>
