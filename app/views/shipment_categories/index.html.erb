<p id="notice"><%= notice %></p>

<h1>Shipment Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Shipment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shipment_categories.each do |shipment_category| %>
      <tr>
        <td><%= shipment_category.name %></td>
        <td><%= shipment_category.shipment_type %></td>
        <td><%= link_to 'Show', shipment_category %></td>
        <td><%= link_to 'Edit', edit_shipment_category_path(shipment_category) %></td>
        <td><%= link_to 'Destroy', shipment_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

