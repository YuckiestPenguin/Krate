<p id="notice"><%= notice %></p>

<h1>Ports</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Port code</th>
      <th>Shipment type</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ports.each do |port| %>
      <tr>
        <td><%= port.name %></td>
        <td><%= port.port_code %></td>
        <td><%= port.shipment_type.name%></td>

        <td><%= port.shipment_type.name %></td>

        <td><%= link_to 'Show', port %></td>
        <td><%= link_to 'Edit', edit_port_path(port) %></td>
        <td><%= link_to 'Destroy', port, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<h3>Import Ports</h3>
<p><%= form_tag import_ports_path, multipart: true do %></p>

  <div>
    <%= file_field_tag :file%>
    <p><%= submit_tag "Import Ports", class: "btn btn-info" %></p>
  </div>
    <p><%= link_to 'New Port', new_port_path, class: "btn btn-success" %></p>

<% end %>
