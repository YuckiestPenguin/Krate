<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">

        <h1>Ports</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Port code</th>
              <th>Shipment type</th>
              <th>Country</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @ports.each do |port| %>
            <tr>
              <td><%= port.name %></td>
              <td><%= port.port_code %></td>
              <td><%= port.shipment_type.name%></td>
              <td><%= port.country.country_code%></td>

              <td><%= link_to 'Show', port %></td>
              <td><%= link_to 'Edit', edit_port_path(port) %></td>
              <td><%= link_to 'Destroy', port, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>

          </tbody>
        </table>

        <br>


        <%= link_to 'New Port', new_port_path %>
      </div>
    </div>
  </container>
</section>
