<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-xs-12">
        <h1>Countries</h1>

        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th><%= sort_link(@search, :country_code, "Category") %></th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @countries.each do |country| %>
            <tr>
              <td><%= country.name %></td>
              <td><%= country.country_code %></td>
              <td><%= link_to 'Show', country %></td>
              <td><%= link_to 'Edit', edit_country_path(country) %></td>
              <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>

        <br>
        <h3>Import Countries</h3>
        <%= form_tag import_countries_path, multipart: true do %>
        <%= file_field_tag :file %>
        <%= submit_tag "Import Countries" %>
        <% end %>


        <%= link_to 'New Country', new_country_path %>
      </div>
    </div>
  </div>


</section>
